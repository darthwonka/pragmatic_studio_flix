<%= form_with(model: movie, local: true) do |f| %>
    <%= movie.errors.full_messages.to_sentence %>
    <%= render "shared/errors", object: movie %>
    <%= f.label :title %>
    <%= f.text_field :title, autofocus: "true" %>
    <%= f.label :rating %>
    <%= f.select :rating, Movie::RATINGS, prompt: "Pick one" %>
    <%= f.label :released_on %>
    <%= f.datetime_local_field :released_on  %>
    <%= f.label :total_gross %>
    <%= f.text_field :total_gross %>
    <%= f.label :duration %>
    <%= f.text_field :duration %>
    <%= f.label :director %>
    <%= f.text_field :director %>
    <%= f.label :description, rows: 10 %>
    <%= f.text_area :description %> 
    <%= f.label :image_file_name %>
    <%= f.text_field :image_file_name %>
    <div class="checkboxes">
        <%= f.collection_check_boxes(:genre_ids, Genre.all.order(:name), :id, :name ) %>
    </div>
    <%= f.submit %>
<% end %>